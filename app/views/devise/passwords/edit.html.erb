<div class="forget-password-main">
  <h3 class="main-heading">Change your password</h3>
  <div class="row">
    <div class="large-3 medium-2 columns" style="height: 1px;;"></div>
    <div class="large-6 medium-8 columns">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, placeholder: "New password", label: false, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => { class: "textfield" } %>
            <%= f.input :password_confirmation, placeholder: "Confirm Your New Password", label: false, required: true, :input_html => { class: "textfield" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Change my password", class:"change_btn" %>
          </div>
      <% end %>
      <!--<div class="login-signup-con">-->
        <%#= render "devise/shared/links" %>
        <!--<div class="clearfix"></div>-->
      <!--</div>-->
    </div>
    <div class="large-3 medium-2 columns"></div>
  </div>
</div>
