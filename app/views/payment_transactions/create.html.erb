<h1 class="text-center">Please don't refresh or exit the browser window. This will just take few seconds.</h1>
<%
   txnid = nil
   if Rails.env == 'production'
     #todo change this
     txnid = @jetsteal_seat_purchaser.payment_transaction.id - 99999999
   else
     txnid = @jetsteal_seat_purchaser.payment_transaction.id - 99999999
   end
%>
<form action='https://test.payu.in/_payment' name="payuform" method='post' style="display: none">
  <input type="hidden" name="firstname" value="<%= @jetsteal_seat_purchaser.contact.first_name %>" />
  <input type="hidden" name="lastname" value="<%= @jetsteal_seat_purchaser.contact.last_name %>" />
  <input type="hidden" name="surl" value="<%= request.base_url %>/payment_transactions/success" />
  <input type="hidden" name="phone" value="<%= @jetsteal_seat_purchaser.contact.phone %>" />
  <input type="hidden" name="key" value="<%= PAYU_ID %>" />
  <input type="hidden" name="hash" value = "<%= Digest::SHA2.new(512).hexdigest("#{PAYU_ID}|#{txnid}|#{sprintf('%.2f', @jetsteal_seat_purchaser.amount)}|JetstealSeats|#{@jetsteal_seat_purchaser.contact.first_name}|#{@jetsteal_seat_purchaser.contact.email}|#{@jetsteal_seat_purchaser.jetsteal_seats.map(&:id).to_s}|#{@jetsteal_seat_purchaser.jetsteal.id}|||||||||#{PAYU_SALT}") %>" />
  <input type="hidden" name="curl" value="<%= request.base_url %>/payment_transactions/failure" />
  <input type="hidden" name="furl" value="<%= request.base_url %>/payment_transactions/cancel" />
  <input type="hidden" name="txnid" value="<%= txnid %>" />
  <input type="hidden" name="productinfo" value="JetstealSeats" />
  <input type="hidden" name="amount" value="<%= sprintf('%.2f', @jetsteal_seat_purchaser.amount) %>" />
  <input type="hidden" name="email" value="<%= @jetsteal_seat_purchaser.contact.email %>" />
  <input type="hidden" name="udf1" value="<%= @jetsteal_seat_purchaser.jetsteal_seats.map(&:id).to_s %>">
  <input type="hidden" name="udf2" value="<%= @jetsteal_seat_purchaser.jetsteal.id %>">
  <input type= "submit" value="submit">
</form>
<script>
  $(document).on('ready page:load', function(){
    setTimeout(function(){document.payuform.submit();},500);
  })
</script>