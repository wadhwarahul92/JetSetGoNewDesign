<div class="row">
  <div class="col-sm-6 background-blue" style="margin-top: -20px;min-height: 600px">
    <h1 class="text-center">SUCCESS</h1>
    <h1 class="text-center font-large"><i class="fa fa-smile-o fa-6"></i></h1>
    <p class="text-center">You have successfully booked <%= @jetsteal_seats.count %> seats on Jetsteal service provided by JetSetGo</p>
    <p class="text-center">We have delivered a detailed email about same on the provided email id. Feel free to contact our operations and support team anytime.</p>
    <h3 class="text-center">Happy Journey!</h3>
  </div>
  <div class="col-sm-6">
    <p class="text-center"><span class="label label-primary">&nbsp;</span> Your seats</p>
    <%= @jetsteal.aircraft.aircraft_type.svg.html_safe %>
  </div>
</div>
<script>
  //This is very very page specific js and must remain here only
  $(document).on('ready page:load', function(){
    var ui_seat_ids = [];
    <% @jetsteal_seats.each_with_index do |jetsteal_seat, index| %>
      ui_seat_ids[<%= index %>] = "<%= jetsteal_seat.ui_seat_id %>";
    <%- end %>
    //fill all seats by available color
    $('path[id^=seat]').css('fill', 'rgb(232, 159, 43)');
    $.each(ui_seat_ids, function(i, ui_seat_id){
      //fill these seats by booked color
      $("path#"+ui_seat_id).css('fill', 'rgb(43, 99, 174)');
    });
  });
</script>