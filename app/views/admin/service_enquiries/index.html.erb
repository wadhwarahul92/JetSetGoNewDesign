<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Service Enquiries</h2>
    <div class="admin_content_body">
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped table-data-con">
            <thead>
            <tr class="info">
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Mobile number</th>
              <th>Date of travel</th>
              <th>Package</th>
              <th>Enquiry date</th>
            </tr>
            </thead>
            <tbody>
            <% @service_enquiries.each do |service_enquiry| %>
                <tr>
                  <td><%= service_enquiry.id %></td>
                  <td><%= service_enquiry.name.titleize %></td>
                  <td><%= service_enquiry.email %></td>
                  <td><%= service_enquiry.mobile_number %></td>
                  <td><%= service_enquiry.date_of_travel.strftime(time_format) %></td>
                  <td><%= service_enquiry.package %></td>
                  <td><%= service_enquiry.created_at.strftime(time_format) %></td>
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @service_enquiries %>
    </div>
  </div>
</div>