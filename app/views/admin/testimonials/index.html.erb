<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Testimonials</h2>
    <div class="admin_content_body">
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped table-data-con">
            <thead>
            <tr class="info">
              <th>Id</th>
              <th>Name</th>
              <th>Text</th>
              <th>User name</th>
            </tr>
            </thead>
            <tbody>
            <% @testimonials.each do |testimonial| %>
                <tr>
                  <td><%= testimonial.id %></td>
                  <td><%= testimonial.name %></td>
                  <td><%= testimonial.text %></td>
                  <td><%= testimonial.user.full_name%></td>
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
