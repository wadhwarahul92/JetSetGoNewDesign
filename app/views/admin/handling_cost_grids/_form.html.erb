<%= simple_form_for [:admin, @handling_cost_grid] do |f| %>
    <%= f.error_notification %>
    <%= f.input :aircraft_id, collection: aircrafts_for_collection, prompt: 'Select an aircraft'  %>
    <%= f.input :airport_id, collection: airports_for_collection, prompt: 'Select an airport' %>
    <%= f.input :cost %>
    <%= f.submit 'Save', class: 'btn btn-success' %>
<%- end %>