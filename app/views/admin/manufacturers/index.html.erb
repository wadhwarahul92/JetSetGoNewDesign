<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Manufacturers</h2>
    <div class="admin_content_body">
      <div class="col-sm-12">
        <ul class="list-inline">
          <li><%= link_to 'New Manufacturer', new_admin_manufacturer_path, class: 'btn btn-primary' %></li>
        </ul>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped table-data-con">
            <thead>
            <tr class="info">
              <th>Id</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @manufacturers.each do |manufacturer| %>
                <tr>
                  <td><%= manufacturer.id %></td>
                  <td><%= manufacturer.name %></td>
                  <td>
                    <%= link_to edit_admin_manufacturer_path(manufacturer) do %>
                        <i class="fa fa-edit"></i>
                    <%- end %>
                  </td>
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>