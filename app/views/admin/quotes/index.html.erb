<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Quotes</h2>
    <div class="admin_content_body">
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped table-data-con">
            <thead>
            <tr class="info">
              <th>ID</th>
              <th>Organisation</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @quotes.each do |quote| %>
                <tr>
                  <td>Quote#<%= quote.id %></td>
                  <td><%= quote.organisation.name.capitalize %></td>
                  <td><%= quote.status.capitalize %></td>
                  <td>
                    <%= link_to admin_quote_path(quote) do %>
                        <i class="fa fa-eye"></i>
                    <%- end %>
                  </td>
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @quotes %>
    </div>
  </div>
</div>