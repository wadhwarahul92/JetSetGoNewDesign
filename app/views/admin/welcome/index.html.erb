<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <fieldset>
      <legend>Admin Sign In</legend>
      <%= form_tag admin_sign_in_path do %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= email_field_tag :email, params[:email], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, '',class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= submit_tag 'Sign In', class: 'btn btn-success' %>
          </div>
      <%- end %>
    </fieldset>
  </div>
  <div class="col-sm-4"></div>
</div>