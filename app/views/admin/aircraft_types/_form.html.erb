<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Add Airport Suppliers</h2>
    <div class="admin_content_body">
      <%= simple_form_for [:admin, @aircraft_type] do |f| %>
          <div class="col-sm-6">
            <%= f.error_notification %>
            <%= f.input :name %>
            <%= f.input :svg %>
            <%= f.input :speed_in_kts %>
          </div>
          <div class="col-sm-6">
            <%= f.input :description %>
            <%= f.input :aircraft_category_id, collection: aircraft_categories_collection, prompt: 'Select aircraft category' %>
          </div>
          <div class="col-xs-12">
            <%= f.submit 'Save', class: 'btn btn-success' %>
          </div>
      <%- end %>
    </div>
  </div>
</div>