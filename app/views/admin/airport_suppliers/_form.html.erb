<%= simple_form_for [:admin, @airport_supplier] do |f| %>
    <div class='col-xs-6'>
      <%= f.error_notification %>
      <%= f.input :halt_type %>
      <%= f.input :minimum_mtow %>
      <%= f.input :maximum_mtow %>
      <%= f.input :minimum_amount %>
      <%= f.input :offset_amount %>
    </div>
    <div class="col-sm-6">
      <%= f.input :rate_per_tonne %>
      <%= f.input :royalty %>
      <%= f.input :max_other_service %>
      <%= f.input :other_service_cost %>
    </div>
    <div class='col-xs-12'>
      <%= f.submit 'Save', class: 'btn btn-success' %>
    </div>
<%- end %>