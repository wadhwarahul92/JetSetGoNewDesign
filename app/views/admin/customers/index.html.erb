<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Customers</h2>
    <div class="admin_content_body">
      <div class="col-sm-10">
        <ul class="list-inline">
          <li>
            <form action="/admin/customers" method="get">
              <input type="search" name="full_name" value="<%= params[:full_name] %>" placeholder="Full Name" class="search_textfield">
              <span class="slash_devider">/</span>
              <input type="search" name="email" value="<%= params[:email] %>" placeholder="Email id" class="search_textfield">
              <span class="slash_devider">/</span>
              <input type="search" name="phone" value="<%= params[:phone] %>" placeholder="Phone Number" class="search_textfield">
              <span class="slash_devider">/</span>
              <input type="submit" value="Search" class="btn btn-info search_btn">
            </form>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped table-data-con">
            <thead>
            <tr class="info">
              <th>Full name</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
            </thead>
            <tbody>
            <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.full_name.capitalize%></td>
                  <td><%= customer.email %></td>
                  <td><%= customer.phone %></td>
                  <!--<td>-->
                  <!--<%#= link_to admin_enquiry_path(enquiry) do %>-->
                  <!--<i class="fa fa-eye"></i>-->
                  <!--<%#- end %>-->
                  <!--</td>-->
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @customers %>
    </div>
  </div>
</div>