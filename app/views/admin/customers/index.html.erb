<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Customers</h2>
    <div class="admin_content_body" style="padding: 0;">
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped">
            <thead>
            <tr class="info">
              <th>Full name</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
            </thead>
            <tbody>
            <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.full_name.capitalize%></td>
                  <td><%= customer.email %></td>
                  <td><%= customer.phone %></td>
                  <!--<td>-->
                  <!--<%#= link_to admin_enquiry_path(enquiry) do %>-->
                  <!--<i class="fa fa-eye"></i>-->
                  <!--<%#- end %>-->
                  <!--</td>-->
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @customers %>
    </div>
  </div>
</div>