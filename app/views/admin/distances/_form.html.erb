<%= simple_form_for [:admin, @distance] do |f| %>
    <%= f.error_notification %>
    <%= f.input :from_airport_id, collection: airports_for_collection, prompt: 'Select City'  %>
    <%= f.input :to_airport_id, collection: airports_for_collection, prompt: 'Select City' %>
    <%= f.input :distance_in_nm %>
    <%= f.submit 'Save', class: 'btn btn-success' %>
<%- end %>