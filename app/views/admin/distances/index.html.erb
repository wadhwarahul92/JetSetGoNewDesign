<div class="row">
  <div class="col-sm-12">
    <ul class="list-inline">
      <li><%= link_to 'New Distance', new_admin_distance_path, class: 'btn btn-primary' %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
      <tr class="info">
        <th>From Airport Id</th>
        <th>To Airport Id</th>
        <th>Distance In NM</th>
        <th>Created By</th>
        <th>Updated By</th>
      </tr>
      </thead>
      <tbody>
      <% @distances.each do |distance| %>
          <tr>
            <td><%= distance.from_airport_id %></td>
            <td><%= distance.to_airport_id  %></td>
            <td><%= distance.distance_in_nm %></td>
            <td><%= distance.creator.full_name if distance.creator %></td>
            <td><%= distance.last_updater.full_name if distance.last_updater %></td>
          </tr>
      <%- end %>
      </tbody>
    </table>
  </div>
</div>