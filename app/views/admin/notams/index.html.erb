<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Notams</h2>
    <div class="admin_content_body">
      <div class="col-sm-12">
        <ul class="list-inline">
          <li><%= link_to 'New Notam', new_admin_notam_path, class: 'btn btn-primary' %></li>
        </ul>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped">
            <thead>
            <tr class="info">
              <th>ID</th>
              <th>Airport</th>
              <th>Start at</th>
              <th>End at</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @notams.each do |notam| %>
                <%# next unless notam.airport.present? %>
                <tr>
                  <td><%= notam.id %></td>
                  <td><%= notam.airport.present? ? notam.airport.name : "Airport deactivated"%></td>
                  <td><%= notam.start_at.strftime('%d-%b-%Y %H:%M') %></td>
                  <td><%= notam.end_at.strftime('%d-%b-%Y %H:%M') %></td>
                  <td>
                    <%= link_to edit_admin_notam_path(notam) do %>
                        <i class="fa fa-edit"></i>
                    <%- end %>
                  </td>
                </tr>
            <%- end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>