<div class="admin-main-con">
  <div class='col-xs-12'>
    <h2>Add Airport</h2>
    <div class="admin_content_body">
      <%= simple_form_for [:admin, @airport] do |f| %>
          <div class='col-xs-6'>
            <%= f.error_notification %>
            <%= f.input :name %>
            <%= f.input :code, label: 'IATA code' %>
            <%= f.input :icao_code %>
            <%= f.input :city_id, collection: cities_for_collection, prompt: 'Select City' %>
            <%= f.input :airport_category_id, collection: airport_categories_for_collection, prompt: 'Select airport category' %>
            <%= f.input :runway_field_length_in_feet %>
            <%= f.input :longitude %>
            <%= f.input :latitude %>
            <%= f.input :ifr_or_vfr, collection: ['ifr', 'vfr'] %>
            <%= f.input :landing_cost %>
            <%= f.input :bais_time_in_minutes %>
            <%= f.input :landing_minimum_mtow %>
            <%= f.input :landing_maximum_mtow %>
            <%= f.input :landing_rate_per_tonne %>
          </div>
          <div class='col-xs-6'>
            <div class='col-xs-6'>
              <%= f.input :private_landing %>
              <%= f.input :international %>
              <%= f.input :night_landing %>
              <%= f.input :atc %>
            </div>
            <div class='col-xs-6'>
              <%= f.input :night_parking %>
              <%= f.input :fuel_availability %>
              <%= f.input :watch_hour_extension %>
            </div>
          </div>
          <div class='col-xs-12'>
            <%= f.submit 'Save', class: 'btn btn-success' %>
          </div>
      <%- end %>
    </div>
  </div>
</div>