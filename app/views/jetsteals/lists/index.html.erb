<div class="row">
  <div class="col-sm-12">
    <ul class="list-unstyled">
      <% @jetsteals.each do |jetsteal| %>
        <li>
          <div class="row">
            <div class="col-sm-3">
              <%= jetsteal.aircraft.aircraft_type.svg.try(:html_safe) %>
            </div>
            <div class="col-sm-6">
              <h3 class="highlight-light_color"><%= jetsteal.departure_airport.name %> to <%= jetsteal.arrival_airport.name %> </h3>
              <div class="pull-right">
                <ul class="list-inline">
                  <li><%= link_to 'Book a seat', '#', class: 'btn btn-default btn-blue' %></li>
                </ul>
              </div>
            </div>
          </div>
        </li>
      <%- end %>
    </ul>
  </div>
</div>