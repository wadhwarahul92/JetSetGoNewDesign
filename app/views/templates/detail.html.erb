            <h4>Email Id</h4>
            <input type="text" ng-model="passenger_detail.email" class="txt-email" />
          </div>
          <div class="col-md-3">
            <h4>Phone</h4>
            <input type="text" ng-model="passenger_detail.contact" class="txt-phn" />
          </div>
