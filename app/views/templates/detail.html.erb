<div class="profile-info-main detail-profile">
  <div class="container">
    <h2 class="heading">
      Enquired Booking
    </h2>
    <div class="booking-detail">
      <div class="row">
        <div class="col-md-3 col-sm-4">
          <p>
            <b>Booking ID:</b>
            {{ctrl.trip.status == 'enquiry' ? 'Enquiry#'+ctrl.trip.id:''}}
            {{ctrl.trip.status == 'quoted' ? 'Quote#'+ctrl.trip.id:''}}
            {{ctrl.trip.status == 'confirmed' ? 'Trip#'+ctrl.trip.id:''}}
          </p>

        </div>
        <div class="col-md-3 col-sm-4">
          <p><b>Status:</b> <span>
            {{ctrl.trip.status == 'enquiry' ? 'Pending':''}}
            {{ctrl.trip.status == 'quoted' ? 'Quoted':''}}
            {{ctrl.trip.status == 'confirmed' ? 'Confirmed':''}}
          </span></p>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="customer-detail journey-detail">
      <h3>Journey Details</h3>
      <div class="location-main row" ng-repeat="activity in ctrl.trip.activities">
        <div class="col-md-offset-1 col-md-5">
          <img width="28" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/464/original/arrival.png?1470057654">
          <p>{{activity.departure_airport.code}} {{activity.start_at.split(',')[1]}}</p>
          <p>{{activity.start_at.split(',')[0]}}</p>
          <p>{{activity.departure_airport.name}}</p>
          <p>{{activity.departure_airport.city.state}}</p>
        </div>
        {{activity.flight_time}}
        <div class="col-md-offset-1 col-md-5">
          <img width="28" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/465/original/destination.png?1470057672">
          <p>{{activity.arrival_airport.code}} {{activity.end_at.split(',')[1]}}</p>
          <p>{{activity.end_at.split(',')[0]}}</p>
          <p>{{activity.arrival_airport.name}}</p>
          <p>{{activity.arrival_airport.city.state}}</p>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="lb-detail">
          <div class="col-md-offset-1 col-md-3">
            <h5>Trip Type</h5>
            <!--<h6>One Way</h6>-->
            <h6>
              {{ctrl.trip.activities.length == 1 ? 'One Way' : ''}}
              {{ctrl.trip.activities.length == 2 && ctrl.trip.activities[0].departure_airport_id == ctrl.trip.activities[1].arrival_airport_id ? 'Round Trip' : ''}}
              {{ctrl.trip.activities.length == 2 && ctrl.trip.activities[0].departure_airport_id != ctrl.trip.activities[1].arrival_airport_id ? 'Two Way' : ''}}
              {{ctrl.trip.activities.length > 2 ? 'Multicity' : ''}}
            </h6>
          </div>
          <!--<div class="col-md-3">-->
            <!--<h5>Passengers</h5>-->
            <!--<h6>3</h6>-->
          <!--</div>-->
          <div class="col-md-3">
            <h5>Flight Time</h5>
            <h6>{{ctrl.trip.total_flight_time}}</h6>
          </div>
          <div class="clearfix"></div>
        </div>
    </div>
