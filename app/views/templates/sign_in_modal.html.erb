<div class="row " ng-controller="SignInController as ctrl">
  <div class="col-sm-4"></div>
  <div class="col-xs-12">
    <div class="login-black-bg">
      <a href="#" class="closs-btn" ng-click="$close()"><i class="fa fa-times-circle-o"></i></a>
      <div class="section-heading">
        <div class="middle-heading">
          <img height="100" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/525/original/login.png?1470308987" alt="">
        </div>
      </div>
      <fieldset class="login-register-main">
        <div class="col-xs-12">
          <form ng-submit="ctrl.create()">
            <div class="height"></div>
            <div class="field margin-top">
              <!-- <label for="email">Email</label> -->
              <input type="email" id="email" placeholder="Email" class="form-control text-field" ng-model="ctrl.email" />
              <i class="fa fa-user form-icon"></i>
            </div>
            <div class="field margin-top">
              <!--  <label for="password">Password</label> -->
              <input type="password" id="password" placeholder="Password" class="form-control text-field" n ng-model="ctrl.password" />
              <i class="fa fa-unlock-alt form-icon"></i>
            </div>
            <div class="field text-right">
              <a class="forget-text" href="/forget_password">Forgot Password ?</a>
            </div>
            <!--<p class="field forget-text">-->
              <!--<%#= link_to 'Forgot password?', forgot_password_organisations_operators_path, class: 'pull-right' %>-->
            <!--<div class="clearfix"></div>-->
            <!--</p>-->
            <div class="field">
              <input type="submit" class="btn btn-primary proceed-btn margin-top" value="Sign in">
            </div>
            <div class="field">
              <span class="or-text">or</span>
            </div>
            <div class="field">
              <a ng-click="ctrl.openSignUnModal()" href="" class="register-click">Register</a>
            </div>
          </form>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="clearfix"></div>
</div>

