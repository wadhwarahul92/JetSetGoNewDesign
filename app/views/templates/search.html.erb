        <div class="col-sm-12" style="border: 1px solid lightgray; padding: 0">
          <img style="width: 100%;height: 300px;" ng-src="{{result.aircraft.aircraft_images[0].url}}" src="" alt="">
          <ul class="icon-box">
            <li><span class="search-icon passenger-icon"></span></li>
            <li><span class="search-icon baggage-icon"></span></li>
            <li><span class="search-icon watch-icon"></span></li>
            <li><span class="search-icon speed-icon"></span></li>
            <li><span class="search-icon height-icon"></span></li>
            <li><span class="search-icon crew-icon"></span></li>
            <div class="clearfix"></div>
          </ul>

        </div>
        <div class="col-sm-12" style="border: 1px solid lightgray; padding: 0">
          <div class="col-sm-8">
            <h3>{{result.aircraft.aircraft_type.name}}</h3>
            <a href="" class="no-text-decoration custom-btn" ng-click="ctrl.modalDetail(result, ctrl.tax)">Details</a>
            <a href="" class="no-text-decoration custom-btn" ng-click="ctrl.previewProForma(result)">View Proforma Invoice</a>
          </div>
          <div class="col-sm-4 text-right">
            <h3 class="text-gray"><i class="fa fa-rupee"></i> {{ctrl.totalTripCost(result) | currency:"":0 | indianCurrency}}</h3>
            <a href="" class="custom-btn no-text-decoration " ng-click="ctrl.enquire(result)">Enquiry</a>

