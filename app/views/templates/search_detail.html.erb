<div class="table table-main popup-main">
  <i class="fa fa-times cross_btn" style="z-index: 1;" ng-click="$close()"></i>
  <div class="col-sm-12 col-xs-12">
    <span class="heading popup-heading">Check Your Details</span>
  </div>
  <div class="col-xs-12">
    <div class="custom-box-shadow">
      <div class="col-xs-12 aircraft-heading">
        <div class="row">
          <div class="col-sm-6 ft-md-blue">{{ctrl.detail.aircraft.aircraft_type.name}}</div>
          <div class="col-sm-6"></div>
        </div>
      </div>
      <!--<div class="col-sm-6 col-xs-12 img-con">-->
            <!--<span>-->
              <!--<img class="img-responsive" style="width: 100%;" ng-src="{{ctrl.detail.aircraft.aircraft_images[0].url}}">-->
            <!--</span>-->
      <!--</div>-->
      <div class="col-sm-12 col-xs-12">
        <ul class="list-unstyled">
          <li class="accomodation-con" ng-repeat="flight_plan in ctrl.detail.flight_plan">
            <ul ng-class="flight_plan.flight_type == 'empty_leg' ? 'dotted-border' : ''">
              <li class="empty-leg-heading">
                <span class="heading-text" ng-show="flight_plan.flight_type == 'empty_leg'" >Empty Leg</span>
              </li>
              <li class="list-accomodation">
                <ul>
                  <li class="text-left">
                    <p class="airport-name">{{ ctrl.airportForId(flight_plan.departure_airport_id).name }}</p>
                    <p class="timing-text">{{ctrl.formatTime(flight_plan.start_at)}}</p>
                    <i class="fa fa-plane plain-arrow-icon" aria-hidden="true"></i>
                  </li>
                  <li class="text-right">
                    <p class="airport-name">{{ ctrl.airportForId(flight_plan.arrival_airport_id).name }}</p>
                    <p class="timing-text">{{ctrl.formatTime(flight_plan.end_at)}}</p>
                  </li>
                </ul>
              </li>
              <li class="list-accomodation">
                <ul>
                  <li class="text-left">Flight cost</li>
                  <li class="text-right"><i class="fa fa-rupee"></i> {{flight_plan.flight_cost | currency:"":2 | indianCurrency}}</li>
                </ul>
              </li>
              <li class="list-accomodation">
                <ul>
                  <li class="text-left">Handling cost</li>
                  <li class="text-right"><i class="fa fa-rupee"></i> {{flight_plan.handling_cost_at_takeoff | currency:"":2 | indianCurrency}}</li>
                </ul>
              </li>
              <li class="list-accomodation" ng-class="!flight_plan.watch_hour_cost ? 'no-bottom-border' : '' ">
                <ul>
                  <li class="text-left">Landing cost</li>
                  <li class="text-right"><i class="fa fa-rupee"></i> {{flight_plan.landing_cost_at_arrival | currency:"":2 | indianCurrency}}</li>
                </ul>
              </li>

              <li class="list-accomodation" ng-class="flight_plan.watch_hour_cost ? 'no-bottom-border' : ''" ng-show="flight_plan.watch_hour_cost">
                <ul>
                  <li class="text-left">Watch hour cost</li>
                  <li class="text-right"><i class="fa fa-rupee"></i> {{flight_plan.watch_hour_cost | currency:"":2 | indianCurrency}} <i class="fa fa-info-circle" style="font-size: 18px" uib-tooltip="The charges are payable by all operators/agencies operating outside the watch hours including Defence, NCC, BSF etc. even though any of them may be exempt from payment of normal landing RNF charges."></i> </li>
                </ul>
              </li>


            </ul>

            <!--<div class="col-sm-12" style="background: orange"> {{flight_plan.flight_type}}</div>-->
            <!--<div class="col-sm-12">{{ctrl.formatTime(flight_plan.start_at)}} &ndash;&gt; {{ctrl.formatTime(flight_plan.end_at)}}</div>-->
            <!--<div class="col-sm-6">{{ ctrl.airportForId(flight_plan.departure_airport_id).name }} </div>-->
            <!--<div class="col-sm-6"> &ndash;&gt;  {{ ctrl.airportForId(flight_plan.arrival_airport_id).name }}</div>-->
            <!--<div class="col-sm-6">landing_cost_at_arrival</div>-->
            <!--<div class="col-sm-6">{{flight_plan.landing_cost_at_arrival}}</div>-->
            <!--<div class="col-sm-6">handling_cost_at_takeoff</div>-->
            <!--<div class="col-sm-6">{{flight_plan.handling_cost_at_takeoff}}</div>-->
            <!--<div class="col-sm-6">watch_hour_cost</div>-->
            <!--<div class="col-sm-6">{{flight_plan.watch_hour_cost}}</div>-->
            <!--<div class="col-sm-6">flight_cost</div>-->
            <!--<div class="col-sm-6">{{flight_plan.flight_cost}}</div>-->
            <div class="row">
              <div class="" ng-class="flight_plan.empty_leg_plan ? 'col-sm-6' : 'col-sm-12'">
                <!--<div class="accomodation-con unselect-color" ng-class="flight_plan.empty_leg_plan ? 'selected-color-con' : ''" style="cursor: pointer" ng-click="flight_plan.chosen_intermediate_plan = 'accommodation_plan'" ng-show="flight_plan.accommodation_plan">-->
                  <!--<div class="accomodation-con" ng-class="{flight_plan.chosen_intermediate_plan == 'accommodation_plan' ? 'select-color' : 'unselect-color', flight_plan.empty_leg_plan ? 'selected-color-con' : '' }" style="cursor: pointer" ng-click="flight_plan.chosen_intermediate_plan = 'accommodation_plan'" ng-show="flight_plan.accommodation_plan">-->
                <div class="accomodation-con unselect-color" ng-class="{'select-color': flight_plan.chosen_intermediate_plan == 'accommodation_plan', 'unselect-color': flight_plan.chosen_intermediate_plan == 'empty_leg_plan', 'selected-color-con': flight_plan.empty_leg_plan, '': !flight_plan.empty_leg_plan }" style="cursor: pointer" ng-click="flight_plan.chosen_intermediate_plan = 'accommodation_plan'" ng-show="flight_plan.accommodation_plan">
                  <!--<h3 ng-show="flight_plan.chosen_intermediate_plan == 'accommodation_plan'" >Selected Accommodation plan</h3>-->
                  <h3 class="">
                    <span ng-class="flight_plan.accommodation_plan ? 'selected-border' : ''">Accommodation plan</span>
                  </h3>
                  <ul class="">
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">Accommodation At:</li>
                        <li class="text-right">{{ctrl.airportForId(flight_plan.arrival_airport_id).city.name}}</li>
                      </ul>
                    </li>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">Cost:</li>
                        <li class="text-right"><i class="fa fa-rupee"></i> {{ flight_plan.accommodation_plan.cost | currency:"" | indianCurrency }}</li>
                      </ul>
                    </li>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">Night:</li>
                        <li class="text-right">{{ flight_plan.accommodation_plan.nights }}</li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="accomodation-con unselect-color selected-color-con" ng-class="{'select-color': flight_plan.chosen_intermediate_plan == 'empty_leg_plan', 'unselect-color': flight_plan.chosen_intermediate_plan == 'accommodation_plan'}" style="cursor: pointer" ng-click="flight_plan.chosen_intermediate_plan = 'empty_leg_plan'" ng-show="flight_plan.empty_leg_plan">
                  <!--<h3 ng-show="flight_plan.chosen_intermediate_plan == 'empty_leg_plan'" >Selected Empty leg plan</h3>-->
                  <h3>
                    <span ng-class="flight_plan.empty_leg_plan ? 'selected-border' : ''">Empty leg plan</span>
                  </h3>
                  <ul ng-repeat="empty_leg in flight_plan.empty_leg_plan">
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">
                          <p class="airport-name">{{ ctrl.airportForId(empty_leg.departure_airport_id).name }}</p>
                          <p class="timing-text">{{ ctrl.formatTime(empty_leg.start_at) }}</p>
                        </li>
                        <li class="text-right">
                          <p class="airport-name">{{ ctrl.airportForId(empty_leg.arrival_airport_id).name }}</p>
                          <p class="timing-text">{{ ctrl.formatTime(empty_leg.end_at) }}</p>
                        </li>
                      </ul>
                    </li>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">Flying cost</li>
                        <li class="text-right"><i class="fa fa-rupee"></i> {{empty_leg.flight_cost | currency:"" | indianCurrency}}</li>
                      </ul>
                    </li>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left">Handling cost</li>
                        <li class="text-right"><i class="fa fa-rupee"></i> {{empty_leg.handling_cost_at_takeoff | currency:"" | indianCurrency}}</li>
                      </ul>
                    </li>
                    <li class="list-accomodation no-bottom-border">
                      <ul>
                        <li class="text-left">Landing cost</li>
                        <li class="text-right"><i class="fa fa-rupee"></i> {{empty_leg.landing_cost_at_arrival | currency:"" | indianCurrency}}</li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <li>
            <div class="row">
              <div class="col-xs-12">
                <div class="accomodation-con">
                  <ul>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left"><b>Tax</b></li>
                        <li class="text-right"><b><i class="fa fa-rupee"></i> {{ctrl.tax_in_rupees | currency:"":2 | indianCurrency}}</b></li>
                      </ul>
                    </li>
                    <li class="list-accomodation">
                      <ul>
                        <li class="text-left total_amount"><b>Grant Total</b></li>
                        <li class="text-right total_amount"><b><i class="fa fa-rupee"></i> {{ctrl.totalTripCost() | currency:"":0 | indianCurrency}}</b></li>
                      </ul>
                    </li>
                    <!--<li class="list-accomodation">-->
                      <!--<a href="" class="custom-btn no-text-decoration " ng-click="ctrl.enquire(ctrl.detail)">Enquire</a>-->
                    <!--</li>-->
                  </ul>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>