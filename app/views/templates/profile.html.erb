<div class="section-heading search_heading">
  <div class="container">
    <img class="img-responsive" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/641/original/yourcockpit.png?1471511926" alt="">
  </div>
</div>
<div class="profile-detail-main">
  <div class="container">
    <div class="profile-main">
      <div class="row">
        <div class="col-md-3 col-sm-3">
          <div class="profile-image">
            <!-- p_img  -->
            <img src="" class="p_img img-responsive" ng-src="{{ctrl.currentUser.image}}" alt="" />
            <a class="add-img-icon"  ng-show="ctrl.upd_profile" href="javascript:void(0)" ng-file-select accept=".jpg,.png" ng-file-change="ctrl.uploadUserImage($files, ctrl.currentUser)">
                    <i class="fa fa-picture-o"></i> Add/Edit Image
            </a>
          </div>
        </div>
        <div class="col-md-9 col-sm-9">
          <div class="user-info">
            <h2 class="name-text ms-text-capitalize">
              {{ctrl.currentUser.full_name}}
              <!--<span class="pull-right total-booking-text">Total Booking: {{ctrl.booked_jets.length}}</span>-->
              <div class="clearfix"></div>
            </h2>
            <ul class="user-detail">
              <!-- <li>
                <i class="fa fa-bell 
                notication-icon" aria-hidden="true"></i>
                <h4>2</h4>
                <p>Notication</p>
              </li> -->

              <li>
                <a ng-href="enquired_jets">
                  <!--<h4>{{ctrl.enquired_jets.length}}</h4>-->
                  <h4>{{ctrl.currentUser.number_of_enquiries}}</h4>
                  <p>Enquired Bookings</p>
                </a>
              </li>
              <li>
                <a ng-href="booked_jets">
                  <!--<h4>{{ctrl.booked_jets.length}}</h4>-->
                  <h4>{{ctrl.currentUser.number_of_confirmed}}</h4>
                  <p>Confirmed Bookings</p>
                </a>
              </li>
              <li>
                <a ng-href="quotes">
                  <!--<h4>{{ctrl.quotes.length}}</h4>-->
                  <h4>{{ctrl.currentUser.number_of_quoted}}</h4>
                  <p>Quoted Bookings</p>
                </a>
              </li>
              <li>
                <a ng-href="sell_empty_leg">
                  <!--<h4>{{ctrl.count_empty_legs(ctrl.trips)}}</h4>-->
                  <h4>{{ctrl.currentUser.number_of_empty_legs}}</h4>
                  <p>EmptyLegs</p>
                </a>
              </li>
              <div class="clearfix"></div>
            </ul>
            <a class="edit-icon" href="javascript:void(0)" ng-click="ctrl.upd_profile =! ctrl.upd_profile" ng-hide="ctrl.upd_profile" >
              <img height="13" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/444/original/edit_icon.png?1470035299"> Edit
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="profile-info-main">
  <div class="transparent-bg" ng-show="!ctrl.upd_profile"></div>
  <div class="container">
    <h2 class="heading">{{ctrl.upd_profile ? 'Edit Profile' : 'Profile'}}</h2>
    <div class="row">
      <div class="col-md-5 col-sm-6 col-xs-12">
        <div class="data-coloum">
          <img src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/699/original/cphoneicon.png?1472035938" class="icons">
          <input type="text" ng-model="ctrl.currentUser.phone" class="" ng-class="ctrl.upd_profile ? 'edit_text_field' : 'text-field'" />
        </div>
      </div>
      <div class="col-md-offset-2 col-md-5 col-sm-6 col-xs-12">
        <div class="data-coloum">
          <img src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/704/original/mail.gif?1472037701" class="icons">
          <!--<input type="text" value="wadhwarahul92@gmail.com" class="text-field" />-->
          <label class="text-field"> {{ctrl.currentUser.email}}</label>
        </div>
      </div>
      <div class="col-md-5 col-sm-6 col-xs-12">
        <!--<div class="data-coloum">-->
          <!--<img src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/454/original/calender.png?1470047234" class="icons">  -->
          <!--<input type="text" ng-modal="ctrl.currentUser.dob" class="text-field" />-->
        <!--</div>-->

        <div class="data-coloum">
        <img src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/729/original/calendar.png?1472552302" class="icons">
        <span class="search-form">
            <!--<span class="search-icon">-->
              <!--<img class="img-responsive" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/353/original/clock.png?1468494135" alt="">-->
            <!--</span>-->
            <div class="dropdown datetimepicker-holder search-textfield" ng-class="ctrl.upd_profile ? 'edit_text_field' : 'text-field'">
              <a class="fa" ng-class="ctrl.upd_profile ? 'date-gray' : 'date-text-field'" style="padding-left: 0;" role="button" data-toggle="dropdown" ng-class="ctrl.formatTime(ctrl.currentUser.dob) != 'Click to choose time' ? 'white-color' : ''" data-target="#" href="Javascript:void(0)"> {{ctrl.formatTime(ctrl.currentUser.dob)}}</a>
              <ul class="dropdown-menu" role="menu">
                <datetimepicker data-on-set-time="ctrl.onSetTime(newDate, oldDate)"
                                data-before-render="ctrl.beforeRenderDate($view, $dates, $leftDate, $upDate, $rightDate)"
                                datetimepicker-config="{dropdownSelector: '.save-btn', minView:'day' }"
                                ng-model="ctrl.currentUser.dob">

                </datetimepicker>
              </ul>
            </div>
        </span>
        </div>
      </div>
      <div class="col-md-offset-2 col-md-5 col-sm-6 col-xs-12">
        <div class="data-coloum">
          <div class="notify-btn-con">
            <span ng-model="ctrl.currentUser.sms_active" ng-class="ctrl.currentUser.sms_active ? 'true' : 'false'" ng-click="ctrl.currentUser.sms_active = !ctrl.currentUser.sms_active">
              <span class="option"></span>
            </span>
          </div>
          <label> Notification <span style="font-size: 13px;">via</span> SMS</label>
        </div>
      </div>
      <div class="col-xs-12" ng-model="ctrl.upd_profile" ng-show="ctrl.upd_profile">
        <div class="submit-con text-center">
          <a href="javascript:void(0)" ng-click="ctrl.upd_profile =! ctrl.upd_profile; ctrl.update_profile()" class="save-btn">Save</a>
        </div>
      </div>
    </div>
  </div>
</div>


