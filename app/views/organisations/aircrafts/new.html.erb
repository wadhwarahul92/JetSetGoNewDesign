<div class="row" ng-controller="AircraftController as ctrl">
  <div class="col-sm-12 col-xs-12 add-aircraft-main-con">
    <div class="row">
      <div class="col-sm-12 col-xs-12">
        <h3 class="add-aircraft-heading">Add Aircraft Details</h3>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-8 col-xs-12">
        <div class="add-aircraft-from">
          <%= render partial: 'organisations/aircrafts/form' %>
          <div class="below-btn-con">
            <div class="col-sm-6 col-xs-6">
              <a ng-click="ctrl.create()" class="btn btn-primary save-btn2">Save</a>
            </div>
            <div class="col-sm-6 col-xs-6">
              <%= link_to 'Back', organisations_aircrafts_path, class: 'btn btn-primary back-btn'%>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>