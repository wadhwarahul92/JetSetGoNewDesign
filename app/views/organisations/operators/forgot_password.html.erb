<div class="row " ng-controller="ForgotPasswordController as ctrl">
  <div class="col-sm-12 col-xs-12 login-logo">
    <a class="logo-img" href="/organisations">
      <img class="" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/162/original/jsg_logo_footer.png?1460978273" />
    </a>
  </div>
  <div class="col-md-4 col-sm-2"></div>
  <div class="col-md-4 col-sm-8 col-xs-12">
    <div class="login-black-bg">
      <fieldset class="login-register-main">
        <h5>
          <i class="fa fa-user user-icon-top"></i> Forgot Password
          <!-- <a class="span-text" href="/organisations/sign_up">Register</a> -->
        </h5>
        <div class="col-xs-12">
          <form ng-submit="ctrl.create()">
            <div class="field margin-top">
              <!-- <label for="email">Email</label> -->
              <input type="email" class="form-control text-field" id="email" ng-model="ctrl.email" placeholder="Email">
              <i class="fa fa-envelope form-icon"></i>
            </div>
            <div class="field">
              <p class="further-text">You'll receive an email with further instructions.</p>
            </div>
            <div class="field">
              <input type="submit" value="Send Instructions" class="btn btn-primary proceed-btn margin-top">
            </div>
          </form>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="clearfix"></div>
</div>