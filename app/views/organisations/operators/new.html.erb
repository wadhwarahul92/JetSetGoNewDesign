<div class="row" ng-controller="OperatorController as ctrl">
  <div class="col-sm-2">
    <%= render partial: 'organisations/shared/sidebar' %>
  </div>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <fieldset>
          <legend><small>New Operator</small></legend>
          <form ng-submit="ctrl.create()">
            <div class="field">
              <label for="first_name">First name</label>
              <input type="text" ng-model="ctrl.operator.first_name" class="form-control">
            </div>
            <div class="field">
              <label for="last_name">Last name</label>
              <input type="text" class="form-control" ng-model="ctrl.operator.last_name">
            </div>
            <div class="field">
              <label for="phone">Phone</label>
              <input type="text" class="form-control" ng-model="ctrl.operator.phone">
            </div>
            <div class="field">
              <label for="email">Email</label>
              <input type="text" class="form-control" ng-model="ctrl.operator.email">
            </div>
            <div class="field">
              <label for="password">Password</label>
              <input type="password" class="form-control" ng-model="ctrl.operator.password">
            </div>
            <div class="field">
              <input type="submit" value="Create"  class="btn btn-primary margin-top">
            </div>
          </form>
        </fieldset>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
</div>