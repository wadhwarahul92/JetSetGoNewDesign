<div class="row" ng-controller="OperatorController as ctrl">
  <div class="profile-content-main">
    <h3 class="main-heading">Profile</h3>
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <div class="profile-main-con">
        <div class="field-con">
          <div class="col-sm-3">
            <label>First Name : </label>
          </div>
          <div class="col-sm-9">
            <input id="first_name" class="text-field" type="text" ng-model="ctrl.operator.first_name" />
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con">
          <div class="col-sm-3">
            <label>Last Name : </label>
          </div>
          <div class="col-sm-9">
          <input id="last_name" class="text-field" type="text" ng-model="ctrl.operator.last_name" />
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con">
          <div class="col-sm-3">
            <label>Phone : </label>
          </div>
          <div class="col-sm-9">
            <input id="phone_number" class="text-field" type="text" ng-model="ctrl.operator.phone" />
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con">
          <div class="col-sm-3">
            <label>Email : </label>
          </div>
          <div class="col-sm-9">
            <p>{{ctrl.operator.email}}</p>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con">
          <div class="col-sm-3">
            <label>Organisation : </label>
          </div>
          <div class="col-sm-9">
            <p>{{ctrl.operator.organisation.name}}</p>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con">
          <div class="col-sm-3">
            <label>Designation : </label>
          </div>
          <div class="col-sm-9">
            <p>{{ctrl.operator.designation}}</p>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="field-con text-center">
          <div class="col-sm-12 col-xs-12">
            <a ng-click="ctrl.update_profile()" class="btn btn-primary save-btn">Save</a>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>



