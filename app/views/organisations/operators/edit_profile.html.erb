<div class="row" ng-controller="OperatorController as ctrl">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <fieldset>
      <legend>Profile</legend>
    </fieldset>
    <div class="col-sm-12">
      <div class="col-sm-6">
        <label for="first_name">First Name </label>
      </div>
      <div class="col-sm-6">
        <input id="first_name" type="text" ng-model="ctrl.operator.first_name">
      </div>
      <div class="col-sm-6">
        <label for="last_name">Last Name </label>
      </div>
      <div class="col-sm-6">
        <input id="last_name" type="text" ng-model="ctrl.operator.last_name">
      </div>
      <div class="col-sm-6">
        <label for="phone_number">Phone </label>
      </div>
      <div class="col-sm-6">
        <input id="phone_number" type="text" ng-model="ctrl.operator.phone">
      </div>
      <div class="col-sm-6">
        <label for="email">Email </label>
      </div>
      <div class="col-sm-6">
        <label id="email" type="text">{{ctrl.operator.email}}</label>
      </div>
      <div class="col-sm-6">
        <label for="organisation">Organisation </label>
      </div>
      <div class="col-sm-6">
        <label id="organisation" type="text">{{ctrl.operator.organisation.name}}</label>
      </div>
      <div class="col-sm-6">
        <label for="designation">Designation </label>
      </div>
      <div class="col-sm-6">
        <label id="designation" type="text">{{ctrl.operator.designation}}</label>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <a ng-click="ctrl.update_profile()" class="btn btn-primary">Save</a>
  </div>
</div>