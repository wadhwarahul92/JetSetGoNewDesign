<div class="row" ng-controller="OperatorController as ctrl">
  <div class="col-sm-2">
    <%= render partial: '/organisations/shared/sidebar' %>
  </div>
  <div class="col-sm-10">
    <div class="col-sm-6">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <label for="email">Email</label>
        </div>
        <div class="col-sm-6">
          {{ctrl.operator.email}}
        </div>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-6">
          <label for="full_name">Full Name</label>
        </div>
        <div class="col-sm-6">
          {{ctrl.operator.full_name}}
        </div>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-6">
          <label for="roles">Roles</label>
        </div>
        <div class="col-sm-6">
          <div class="btn-group">
            <label ng-repeat="role in ctrl.roles" class="btn btn-primary" ng-model="ctrl.operatorRoleMap[role]" uib-btn-checkbox>{{role}}</label>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <a ng-click="ctrl.update()" class="btn btn-primary">Save</a>
      </div>
    </div>
    <div class="col-sm-6"></div>
  </div>
</div>