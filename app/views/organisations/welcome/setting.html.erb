<div class="row" ng-controller="SettingsController as ctrl">
  <div class="col-sm-2">
    <%= render partial: '/organisations/shared/sidebar' %>
  </div>
  <div class="col-sm-10">
    <h3 class="main-heading settings_">
      <i class="fa fa-cogs"></i> Settings
    </h3>

    <form name="outerForm" class="tab-form-demo">
      <uib-tabset>
        <uib-tab heading="Operator">
          <table class="table table-striped">
            <thead>
              <th>Email</th>
              <th>Designation</th>
              <th>Action</th>
              <th>
                <%= link_to '/organisations/operators/new', class: 'pull-right' do %>
                  <i class="fa fa-plus"></i> New operator
                <%- end %>
              </th>
            </thead>
            <tbody>
              <tr ng-repeat="operator in ctrl.operators">
                <td>{{operator.email}}</td>
                <td>{{operator.designation}}</td>
                <td>
                  <a ng-href="/organisations/operators/{{operator.id}}/edit">
                    <i class="fa fa-edit"></i>
                  </a>
                </td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </uib-tab>
        <uib-tab heading="Aircraft">
          Some Tab Content
        </uib-tab>
      </uib-tabset>
    </form>
  </div>
</div>