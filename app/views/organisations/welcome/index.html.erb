<div class="row" ng-controller="HomeController as ctrl">
  <div class="col-sm-12">
    <h3 class="main-heading schedule_">
      <i class="organisation-main-icon schedule-icon"></i> <span style="position: relative; top: -6px;">Schedule</span>
    </h3>
    <div class="row">
      <div class="col-sm-8">
        <div ui-calendar="ctrl.calendarConfig.calendar" ng-model="ctrl.events"></div>
      </div>
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-12">
              <a ng-click="ctrl.newTrip()" class="full-width btn btn-primary" href="">New Trip</a>
          </div>
          <div class="col-sm-12 margin-top">
            <a ng-click="ctrl.newUnavailability()" class="full-width btn btn-primary" style="background-color:rgba(241,92,92,0.9);" href="">New Unavailability</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>