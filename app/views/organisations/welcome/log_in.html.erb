<div class="row" ng-controller="SignInController as ctrl">
  <div class="col-sm-4">
    <h4>Create a new Organisation</h4>
    <a href="/organisations/sign_up">Click here</a>
  </div>
  <div class="col-sm-4">
    <fieldset>
      <legend><small>Sign in</small></legend>
      <form ng-submit="ctrl.create()">
        <div class="field margin-top">
          <label for="email">Email</label>
          <input type="email" id="email" class="form-control" ng-model="ctrl.user.email">
        </div>
        <div class="field margin-top">
          <label for="password">Password</label>
          <input type="password" id="password" class="form-control" ng-model="ctrl.user.password">
        </div>
        <div class="field">
          <input type="submit" class="btn btn-primary margin-top" value="Proceed">
        </div>
      </form>
    </fieldset>
  </div>
  <div class="col-sm-4"></div>
</div>