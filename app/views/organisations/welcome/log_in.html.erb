<div class="row " ng-controller="SignInController as ctrl">
  <div class="col-sm-12 col-xs-12 login-logo">
    <a class="logo-img" href="/organisations">
      <img class="" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/162/original/jsg_logo_footer.png?1460978273" />
    </a>
  </div>
  <div class="col-md-4 col-sm-2"></div>
  <div class="col-md-4 col-sm-8 col-xs-12">
    <div class="login-black-bg">
      <fieldset class="login-register-main">
        <h5>
          <i class="fa fa-user user-icon-top"></i> Sign in
          <!-- <a class="span-text" href="/organisations/sign_up">Register</a> -->
        </h5>
        <div class="col-xs-12">
          <form ng-submit="ctrl.create()">
            <div class="field margin-top">
              <!-- <label for="email">Email</label> -->
              <input type="email" id="email" placeholder="Email" class="form-control text-field" ng-model="ctrl.user.email" />
              <i class="fa fa-user form-icon"></i>
            </div>
            <div class="field margin-top">
             <!--  <label for="password">Password</label> -->
              <input type="password" id="password" placeholder="Password" class="form-control text-field" ng-model="ctrl.user.password">
              <i class="fa fa-unlock-alt form-icon"></i>
            </div>
            <p class="field forget-text">
              <%= link_to 'Forgot password?', forgot_password_organisations_operators_path, class: 'pull-right' %>
              <div class="clearfix"></div>
            </p>
            <div class="field">
              <input type="submit" class="btn btn-primary proceed-btn margin-top" value="Sign in">
            </div>
            <div class="field">
              <span class="or-text">or</span>
            </div>
            <div class="field">
              <%= link_to 'Click here to register', organisations_sign_up_path, class: 'btn btn-danger register-click' %>
            </div>
          </form>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="clearfix"></div>
</div>