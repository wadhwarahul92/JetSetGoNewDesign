<div class="row " ng-controller="SignUpController as ctrl">
  <div class="col-sm-12 col-xs-12 login-logo">
    <a class="logo-img" href="/organisations">
      <img class="" src="http://d3tfanr7troppj.cloudfront.net/static_files/images/000/000/162/original/jsg_logo_footer.png?1460978273" />
    </a>
  </div>
  <div class="col-md-4 col-sm-2"></div>
  <div class="col-md-4 col-sm-8 col-xs-12">
    <div class="login-black-bg">
      <fieldset class="login-register-main">
        <h5>
          <i class="fa fa-user user-icon-top"></i> Create Organisation
          <!-- <a class="span-text" href="/organisations/sign_up">Register</a> -->
        </h5>
        <div class="col-xs-12">
          <form ng-submit="ctrl.create()">
            <div class="field margin-top">
              <!--<label for="organisation_name">Organisation Name</label>-->
              <input type="text" id="organisation_name" placeholder="Organisation Name" class="form-control text-field" ng-model="ctrl.organisation.name" class="form-control">
              <i class="fa fa-building form-icon"></i>
            </div>
            <div class="field">
              <input type="submit" value="Next" class="btn btn-primary proceed-btn margin-top">
            </div>
            <div class="field">
              <span class="or-text">or</span>
            </div>
            <div class="field">
              <a class="btn btn-danger register-click" href="/organisations/sign_in">Back</a>
            </div>
          </form>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="clearfix"></div>
</div>