<div class="row add-forum-main-con" ng-controller="ForumTopicController as ctrl">
      <div class="col-sm-12 col-xs-12">
        <h3 class="add-forum-heading">New Forum Topic</h3>
      </div>
      <div class="col-md-3 col-sm-2"></div>
      <div class="col-md-6 col-sm-8 col-xs-12">
        <fieldset>
          <form ng-submit="ctrl.create()" class="add-forum-from">
            <div class="field form-colomn">
              <label for="statement">Statement</label>
              <input type="text" id="statement" ng-model="ctrl.forum_topic.statement" class="form-control">
            </div>
            <div class="field form-colomn">
              <label for="description">Description</label>
              <textarea id="description" rows="2" class="form-control" ng-model="ctrl.forum_topic.description"></textarea>
            </div>
            <div class="field">
              
              
            </div>
            <div class="row">
              <div class="col-sm-6 col-xs-6">
                <input type="submit" value="Save" class="btn btn-primary save-btn2">
              </div>
              <div class="col-sm-6 col-xs-6">
                <%= link_to 'Back', organisations_forum_topics_path, class: 'btn btn-primary back-btn' %>
              </div>
            </div>
          </form>
        </fieldset>
      </div>
      <div class="col-sm-4"></div>
</div>