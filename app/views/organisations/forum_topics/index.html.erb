<div class="row">
  <div class="col-sm-12">
    <h3 class="main-heading forum_">
      <i class="fa fa-quote-left"></i> Forum Topics
      <%= link_to new_organisations_forum_topic_path, class: 'pull-right' do %>
          <i class="fa fa-plus"></i> New Topic
      <%- end %>
    </h3>
    <ul class="list-unstyled main-border">
      <% @forum_topics.each_with_index do |forum_topic, index| %>
          <li>
            <%= link_to organisations_forum_topic_path(forum_topic) do %>
                <div class="forum-topic-container topic-main-con <%= index.even? ? 'bg1' : 'bg2' %>">
                  <div class="row">
                    <div class="col-sm-10">
                    <h3><%= forum_topic.statement %></h3>
                      <p><%= forum_topic.description %></p>
                    </div>
                    <div class="col-sm-2 text-right date-list">
                      <ul class="list-inline">
                        <li class="organition-name"><%= forum_topic.organisation.name %></li>
                        <li class="date-field"><%= forum_topic.created_at.strftime('%d %b %Y') %></li>
                      </ul>
                    </div>
                  </div>
                </div>
            <%- end %>
          </li>
      <%- end %>
      <li><%= will_paginate @forum_topics %></li>
    </ul>
  </div>
</div>