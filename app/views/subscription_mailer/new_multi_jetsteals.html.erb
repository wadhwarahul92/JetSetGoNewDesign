  <td class="one-column">
    <table width="100%">
      <tr>
        <td class="inner contents">
          <p style="text-align: center"><small>Don't want to receive these emails? <a href="<%= HOST_URL_FOR_MAILER %>/jetsteal_subscriptions/<%= @subscriber.id %>/unsubscribe">unsubscribe</a></small></p>
