
<table class="outer" align="center">
  <tr>
    <td class="one-column">
      <table width="100%">
        <tr>
          <td class="inner contents">
            <p class="h1">Hi,</p>
            <p>Organisation update an Aircraft</p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="two-column">
      <table width="100%">
        <% @aircraft.attributes.except('id',
                                       'aircraft_type_id',
                                       'created_at',
                                       'updated_at',
                                       'admin_verified',
                                       'organisation_id',
                                       'base_airport_id',
                                       'deleted_at').each_pair do |key, value| %>
            <% next unless value.present? %>
            <tr style="border: 1px solid #000000;">
              <td width="50%" valign="top" style="border: 1px solid #000000;">
                <div class="column">
                  <table width="100%">
                    <tr>
                      <td class="inner">
                        <p class="h2" style="font-size: 14px;">
                          <%= key.gsub("_", " ").capitalize %>
                        </p>
                      </td>
                    </tr>
                  </table>
                </div>
              </td>
              <td width="50%" valign="top" style="border: 1px solid #000000;">
                <div class="column">
                  <table width="100%">
                    <tr>
                      <td class="inner">
                        <p class="h2" style="font-size: 14px;">
                          <%=
                              case value
                                when true
                                  "Yes"
                                when false
                                  "No"
                                else
                                  value
                              end
                          %>
                        </p>
                      </td>
                    </tr>
                  </table>
                </div>
              </td>
            </tr>
        <% end %>
      </table>
    </td>
  </tr>
</table>